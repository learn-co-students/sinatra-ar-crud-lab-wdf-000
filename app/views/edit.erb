<h1>Edit Post:</h1>

<h2><%= @post.name %> </h2>
<h3><%= @post.content %> </h3>

<form method="POST" action="/posts/<%=@post.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Title:</label>
  <input type="text" name="name">
  <br><br>
  <label>Content:</label><br>
  <input type="text" name="content">
  <br>
  <input type="submit" value="submit">
</form>