<form action="/posts/<%= @post[:id] %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>
    <h2><%= @post[:name] %></h2>
    <label for="blog_name">Update Name: </label>
    <input id="name" type="text" name="post[name]">
  </p>
    <h2><%= @post[:content] %></h2>
  <p>
    <label for="blog_content">Blog Content: </label>
    <textarea id="content" type="text" name="post[content]"></textarea>
  </p>
  <input type="submit" value="submit">
</form>